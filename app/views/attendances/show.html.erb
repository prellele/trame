<%- model_class = Attendance -%>
<div class="page-header">
  <h1><%= t '.title' %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= t 'attendance.start' %>:</strong></dt>
  <dd><%= @attendance.start %></dd>
  <dt><strong><%= t 'attendance.end' %>:</strong></dt>
  <dd><%= @attendance.end %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              attendances_path, class: 'btn' %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_attendance_path(@attendance), class: 'btn btn-warning' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              attendance_path(@attendance),
              method: 'delete',
              data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))},
              class: 'btn btn-danger' %>
</div>
