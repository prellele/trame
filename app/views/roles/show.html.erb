<%- model_class = Role -%>
<div class="page-header">
  <h1><%= t '.title', default: t("helpers.titles.show", class: model_class.model_name.human ) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @role.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @role.description || "-" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rights) %>:</strong></dt>
  <dd><%= @role.rights.map(&:name).join(', ') %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', default: t("helpers.links.back")),
              roles_path, class: 'btn' %>
  <% if allow?("roles","edit") %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_role_path(@role), class: 'btn btn-warning' %>
  <% end %>
  <% if allow?("roles","destroy") %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              role_path(@role),
              method: 'delete',
              data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))},
              class: 'btn btn-danger' %>
  <% end %>
</div>
