<% if trackings.present? %>
<table id="trackings_table" class="table table-striped">
  <% if header %>
  <thead>
    <tr>
      <th></th>
      <th><%= t("trackings.description") %></th>
      <th><%= t("trackings.duration") %></th>
      <th><%= t("trackings.starttime") %></th>
      <th><%= t("projects.project") %></th>
      <% if defined?(@show_actions) && @show_actions %>
      <th><%= t '.actions', default: t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <% end %>
  <tbody>
    <%= render trackings, :locals => { :hide_starttime_date => hide_starttime_date } %>
  </tbody>
</table>
<% else %>
<h3><%= t("nothing_to_see")%></h3>
<% end %>