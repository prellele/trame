<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%= t '.title', default: t("helpers.titles.show", class: model_class.model_name.human ) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd></dd>
  <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
  <dd></dd>
</dl>

<div class="form-actions">
  <% if allow?("invoices","show",@invoice) %>
    <%= link_to t('.back', default: t("helpers.links.back")),
              invoices_path, class: 'btn' %>
  <% end %>
  <% if allow?("invoices","edit",@invoice) %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_invoice_path(@invoice), class: 'btn btn-warning' %>
  <% end %>
  <% if allow?("invoices","destroy",@invoice) %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              invoice_path(@invoice),
              method: 'delete',
              data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))},
              class: 'btn btn-danger' %>
  <% end %>
</div>
