<script type="text/javascript">
  $(document).ready(function () {
    $('#daterange').daterangepicker(
      {
          ranges: {
              '<%= t("dateranges.today") %>': ['today', 'today'],
              '<%= t("dateranges.yesterday") %>': ['yesterday', 'yesterday'],
              '<%= t("dateranges.last_7_days") %>': [Date.today().add({ days: -6 }), 'today'],
              '<%= t("dateranges.last_30_days") %>': [Date.today().add({ days: -29 }), 'today'],
              '<%= t("dateranges.this_month") %>': [Date.today().moveToFirstDayOfMonth(), Date.today().moveToLastDayOfMonth()],
              '<%= t("dateranges.last_month") %>': [Date.today().moveToFirstDayOfMonth().add({ months: -1 }), Date.today().moveToFirstDayOfMonth().add({ days: -1 })]
          },
          format:"<%= t('date.formats.date_format_daterangepicker') %>",
          startDate: Date.today().add({ days: -29 }),
          endDate: Date.today(),
          locale: {
            applyLabel: '<%= t("dateranges.apply") %>',
            toLabel: '<%= t("dateranges.to") %>',
            clearLabel: '<%= t("dateranges.clear") %>',
            fromLabel: '<%= t("dateranges.from") %>',
            customRangeLabel: '<%= t("dateranges.custom_range") %>',
            firstDay: 1
          }
      },
      function(start, end) {
          $('#daterange').value(start.toString("<%= t('date.formats.date_format_daterangepicker') %>") + ' - ' + end.toString("<%= t('date.formats.date_format_daterangepicker') %>"));
    });
  });
</script>
