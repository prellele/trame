<%- model_class = Client -%>
<div class="page-header">
  <h1><%= t '.title', default: t("helpers.titles.show", class: model_class.model_name.human ) %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:start) %>:</strong></dt>
  <dd><%= @client.start %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end) %>:</strong></dt>
  <dd><%= @client.end %></dd>
</dl>

<div class="form-actions">
  <% if allow?("clients","show",@client) %>
    <%= link_to t('.back', default: t("helpers.links.back")),
              clients_path, class: 'btn' %>
  <% end %>
  <% if allow?("clients","edit",@client) %>
    <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_client_path(@client), class: 'btn btn-warning' %>
  <% end %>
  <% if allow?("clients","destroy",@client) %>
    <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              client_path(@client),
              method: 'delete',
              data: {confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?'))},
              class: 'btn btn-danger' %>
  <% end %>
</div>
