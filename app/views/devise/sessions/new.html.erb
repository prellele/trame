<%- model_class = User -%>
<div class="form-signin">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="form-signin-heading"><%= t('sign_in') %></h2>

      <%= f.email_field :email, class: "input-block-level", autofocus: true, placeholder: model_class.human_attribute_name(:email) %>

      <%= f.password_field :password, class: "input-block-level", placeholder: model_class.human_attribute_name(:password) %>

      <% if devise_mapping.rememberable? -%>
          <label class="checkbox">
            <%= f.check_box :remember_me %> <%= f.label t('users.devise.session.remember_me') %>
          </label>
      <% end -%>

      <button class="btn btn-primary" type="submit"><%= t('sign_in') %></button>
  <% end %>

  <%= render "devise/shared/links" %>
</div>