<%- model_class = User -%>
<div class="form-signin">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading"><%= t('sign_up') %></h2>

      <%= f.email_field :email, autofocus: true, placeholder: model_class.human_attribute_name(:email) %>

      <%= f.password_field :password, placeholder: model_class.human_attribute_name(:password) %>

      <%= f.password_field :password_confirmation, placeholder: model_class.human_attribute_name(:password_confirmation) %>

    <div><%= f.submit t('sign_up'), class: "button button-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
