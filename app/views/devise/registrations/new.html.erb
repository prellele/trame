<div class="form-signin">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-signin-heading"><%= t('sign_up') %></h2>

      <%= f.email_field :email, autofocus: true, placeholder: t('users.email') %>

      <%= f.password_field :password, placeholder: t('users.password') %>

      <%= f.password_field :password_confirmation, placeholder: t('users.password_confirmation') %>

    <div><%= f.submit t('sign_up'), class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
