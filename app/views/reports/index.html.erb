<% unless @projects.empty? %>
<% content_for :header do %>
  <%= render partial: 'shared/daterangepicker' %>
<% end %>
<% end %>

<div class="page-header">
  <h1 class="header"><%= t '.title' %></h1>
  <% unless @projects.empty? %>
  <%= link_to t('.export', default: t("helpers.links.export")), current_url(:format => 'csv'),
  class: 'btn btn-success btn-header' %>
  <% end %>
</div>
<% unless @projects.empty? %>
<div class="row-fluid filter-form">
  <%= form_tag reports_path, :method => :get do |f| %>
  <div class="span2">
    <%= select_tag :project_ids, options_from_collection_for_select(@selectable_projects, :id, :name), multiple: true, class: "multiselect" %>
  </div>
  <div class="span3">
    <div id="reportrange" class="input-prepend">
      <span class="add-on"><i class="icon-calendar icon-large"></i></span>
      <%= text_field_tag :daterange %>
    </div>
  </div>
  <%= submit_tag t("action.filter"), class: "btn btn-primary" do %>
    <i class="icon-search"></i>
  <% end %>
  <% end %>
</div>
<% if @projects.count > 1 %>
<div class="row-fluid">
  <div class="span6 charts">
    <div id="workinghourschart"></div>
    <script type="text/javascript">
      $(function() {
          $('#workinghourschart').highcharts({
            chart: {
                plotBackgroundColor: null,
                plotBorderWidth: null,
                plotShadow: false,
                height: 300
            },
            title: {
                text: '<%= t("reports.workinghours_devided_projects")%>'
            },
            tooltip: {
              pointFormat: '{series.name}: <b>{point.percentage}%</b>',
              percentageDecimals: 1
            },
            plotOptions: {
                pie: {
                    allowPointSelect: true,
                    cursor: 'pointer',
                    dataLabels: {
                        enabled: false
                    },
                    showInLegend: true
                }
            },
            series: [{
                type: 'pie',
                name: '<%= t("reports.percentage")%>:',
                data: [
                    <%= @projects.map { |project|  "['#{project.name}', #{project.workinghours_for(current_user)} ]" }.join(",\n").html_safe %>
                ]
            }]
        });
      });
    </script>
  </div>
  <div class="span6">
    <div id="projects_chart"></div>
  </div>
</div>
<% end %>
<%= render partial: 'accordion' %>
<% else %>
<h3><%= t("nothing_to_see")%></h3>
<% end%>


